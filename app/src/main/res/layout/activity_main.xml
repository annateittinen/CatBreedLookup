<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/cat_breed_lookup"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        tools:layout_editor_absoluteX="7dp"
        android:id="@+id/imageView_catBreedLookupLogo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/thin_padding"
        app:layout_constraintTop_toBottomOf="@+id/imageView_catBreedLookupLogo"
        android:id="@+id/layoutForFragment">
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>